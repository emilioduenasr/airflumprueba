<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context=".menu.Registrar_Escenario">


    <ImageView
        android:id="@+id/imageView100"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="200px"
        app:srcCompat="@drawable/icon_registrar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity=""
        android:layout_marginTop="10dp">
        <LinearLayout
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:orientation="vertical">
            <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecione el Dispositivo: "
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:fontFamily="@font/russo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerDispositivos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/russo"
                android:gravity="center"
                android:hint="Ninguno"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/nameScenario"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:drawableStart="@drawable/ic_add"
        android:gravity="center"
        android:hint="Nombre del escenario"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:fontFamily="@font/russo"/>

    <EditText
        android:id="@+id/addresScenario"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:drawableStart="@drawable/ic_edit_location"
        android:gravity="center"
        android:hint="Ingrese la dirección"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:fontFamily="@font/russo"/>

    <EditText
        android:id="@+id/emergencyPhone"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:drawableStart="@drawable/ic_phone"
        android:ems="10"
        android:gravity="center"
        android:hint="Ingrese el teléfono"
        android:inputType="phone"
        android:maxLength="10"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:fontFamily="@font/russo"/>

    <EditText
        android:id="@+id/capacityScenario"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:drawableStart="@drawable/ic_people"
        android:gravity="center"
        android:inputType="number"
        android:hint="Ingrese la capacidad"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:fontFamily="@font/russo"/>
    <Button
        android:id="@+id/btn_RegistrarE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:text="Registrar"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/white"
        app:cornerRadius="50dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/russo"/>

</LinearLayout>